# Database
DATABASE_URL="postgresql://username:password@localhost:5432/investment_tracker"

# JWT
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis
REDIS_URL="redis://localhost:6379"

# APIs financières
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-api-key"
COINGECKO_API_KEY="your-coingecko-api-key" # Optionnel
BINANCE_API_KEY="your-binance-api-key" # Optionnel
YAHOO_FINANCE_API_KEY="" # Gratuit, pas besoin de clé

# APIs objets de collection
WATCH_MARKET_API_KEY="your-watch-market-api-key"
CAR_VALUATION_API_KEY="your-car-valuation-api-key"

# IA/ML pour prédictions
OPENAI_API_KEY="your-openai-api-key"

# Email
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"

# Stripe (pour les abonnements)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Upload
MAX_FILE_SIZE="10485760" # 10MB
UPLOAD_DEST="./uploads"

# Features
ENABLE_PRICE_UPDATES=true
ENABLE_PREDICTIONS=true
ENABLE_IMAGE_UPLOAD=true

# Sentry (monitoring)
SENTRY_DSN="your-sentry-dsn"

# Environment
NODE_ENV="development"
PORT=3000