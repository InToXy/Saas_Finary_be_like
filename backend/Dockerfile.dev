FROM node:20-alpine

# Install OpenSSL 1.1 compatibility layer for Prisma
RUN apk add --no-cache openssl1.1-compat

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Expose port
EXPOSE 3000

# Start development server
CMD ["sh", "-c", "npx prisma generate && npm run start:dev"]
