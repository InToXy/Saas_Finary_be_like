# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/wealth_management?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PRO=price_xxxxx
STRIPE_PRICE_ID_PREMIUM=price_xxxxx

# Email (SendGrid or SMTP)
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USER=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_FROM=noreply@wealth-management.com

# OAuth2 - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# ========================================
# FINANCIAL APIs - CRYPTO
# ========================================
# CoinGecko (Crypto prices) - PRIORITÉ 1
COINGECKO_API_KEY=CG-XXXXXXXXXXXXXXXXXXXXXXXX
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Binance (Crypto backup - no key needed for public data)
BINANCE_API_URL=https://api.binance.com/api/v3
BINANCE_ENABLED=true

# ========================================
# FINANCIAL APIs - STOCKS & ETF
# ========================================
# Alpha Vantage (Stock prices) - PRIORITÉ 1
ALPHA_VANTAGE_API_KEY=YOUR_API_KEY_HERE
ALPHA_VANTAGE_API_URL=https://www.alphavantage.co/query

# Yahoo Finance (Backup - no key needed)
YAHOO_FINANCE_ENABLED=true

# Polygon.io (Optional premium alternative)
POLYGON_API_KEY=
POLYGON_ENABLED=false

# ========================================
# FINANCIAL APIs - COLLECTIBLES
# ========================================
# Artsy API (Art & Collectibles)
ARTSY_CLIENT_ID=
ARTSY_CLIENT_SECRET=
ARTSY_API_URL=https://api.artsy.net/api
ARTSY_ENABLED=false

# Chrono24 (Luxury watches - optional, paid API)
CHRONO24_API_KEY=
CHRONO24_API_URL=https://api.chrono24.com/v1
CHRONO24_ENABLED=false

# Classic.com / Hemmings (Collector cars - optional)
CLASSIC_COM_API_KEY=
HEMMINGS_API_KEY=
COLLECTOR_CARS_API_ENABLED=false

# ========================================
# EXCHANGE RATES
# ========================================
EXCHANGE_RATE_API_KEY=YOUR_KEY
EXCHANGE_RATE_API_URL=https://v6.exchangerate-api.com/v6

# ========================================
# NEWS API (Optional - for asset-related news)
# ========================================
NEWS_API_KEY=
NEWS_API_ENABLED=false

# ========================================
# LEGACY APIs (Banking aggregation)
# ========================================
# Budget Insight (Agrégation bancaire FR)
BUDGET_INSIGHT_CLIENT_ID=your_budget_insight_client_id
BUDGET_INSIGHT_CLIENT_SECRET=your_budget_insight_client_secret
BUDGET_INSIGHT_API_URL=https://api.budget-insight.com

# Plaid (Alternative US/International)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# MeilleursAgents (Estimation immobilière FR)
MEILLEURSAGENTS_API_KEY=your_meilleursagents_api_key

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-me

# ========================================
# FILE UPLOAD & STORAGE
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg
MAX_IMAGES_PER_ASSET=5

# AWS S3 (Optional - for cloud storage)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
USE_S3_STORAGE=false

# ========================================
# CRON JOBS
# ========================================
PRICE_UPDATE_CRON=0 */4 * * *
PREDICTION_UPDATE_CRON=0 2 * * *
ENABLE_PRICE_UPDATES=true
ENABLE_PREDICTIONS=true

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Sentry (Error tracking)
SENTRY_DSN=

# Frontend URL
FRONTEND_URL=http://localhost:5173
